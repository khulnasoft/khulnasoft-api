{
  "exclude": ["node_modules", "package"],
  "compilerOptions": {
    "composite": true,
    "sourceMap": true,
    "declarationMap": true,
    "target": "ES2022",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "useDefineForClassFields": true
  }
}
