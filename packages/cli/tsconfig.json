{
  "extends": "../../tsconfig-common.json",
  "include": ["src"],
  "exclude": ["test_project"],
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "declaration": true,
    "sourceMap": true,
    "composite": true
  },
  "references": [
    { "path": "../khulnasoft" },
    { "path": "../ts-to-zod/tsconfig.build.json" }
  ]
}
